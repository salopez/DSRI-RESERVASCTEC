@model Datos.DSRIFMOBILIARIO

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Right side column. Contains the navbar and content of the page -->
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Editar Mobiliario
                        <small>Edición</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="glyphicon glyphicon-cog"></i>Configuración del Sistema</a></li>
            <li><a href="#">Administrar Mobiliario</a></li>
            <li><a href="#">Editar Mobiliario</a></li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <!-- right column -->
            <div class="col-md-6">
                <!-- general form elements disabled -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Datos de Mobiliario</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
    
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.ID_MOBILIARIO)
                            <div class="form-group">
                                @Html.LabelFor(model => model.COD_TIPOMOBILIARIO, "Tipo de Mobiliario", new { @class = "control-label" })
                                @Html.DropDownList("COD_TIPOMOBILIARIO", null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.NOM_MOBILIARIO, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.NOM_MOBILIARIO, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CAN_MOBILIARIO, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.CAN_MOBILIARIO, new { @class = "form-control", @type = "number" })
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Guardar Cambios" class="btn btn-warning" />
                                |
                @Html.ActionLink("Regresar al contenido principal", "Index", null, new { @class = "btn btn-default" })
                            </div>
                        
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>

@Scripts.Render("~/bundles/endpage")