@model Datos.DSRIFUSUARIOS

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Right side column. Contains the navbar and content of the page -->
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Mostrando Usuarios
                        <small>Activos</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="glyphicon glyphicon-cog"></i>Configuración del Sistema</a></li>
            <li><a href="#">Administrar Usuarios</a></li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <!-- right column -->
            <div class="col-md-6">
                <!-- general form elements disabled -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">¿Seguro que desea eliminar este Usuario?</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NOM_USUARIO)
                        </div>

                        <div class="form-group">
                            @Html.DisplayFor(model => model.NOM_USUARIO)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TXT_CONTRASEÑA)
                        </div>

                        <div class="form-group">
                            @Html.DisplayFor(model => model.TXT_CONTRASEÑA)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TXT_ROL)
                        </div>

                        <div class="form-group">
                            @Html.DisplayFor(model => model.TXT_ROL)
                        </div>


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Eliminar Usuario" class="btn btn-danger" />
                                |
                                @Html.ActionLink("Regresar al contenido principal", "Index", null,new {@class = "btn btn-default" })
                            </div>
                            
                            
                        }
                    </div>

                </div>
            </div>
        </div>
    </section>
</aside>

@Scripts.Render("~/bundles/endpage")