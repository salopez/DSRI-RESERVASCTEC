@model Datos.DSRIFUSUARIOS

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Editar Usuario
                        <small>Edición</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="glyphicon glyphicon-cog"></i>Configuración del Sistema</a></li>
            <li><a href="#">Administrar Usuarios</a></li>
            <li><a href="#">Editar Usuario</a></li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <!-- right column -->
            <div class="col-md-6">
                <!-- general form elements disabled -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Datos de Usuario</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NOM_USUARIO)
                        </div>

                        <div class="form-group">
                            @Html.DisplayFor(model => model.NOM_USUARIO)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.TXT_CONTRASEÑA)
                        </div>

                        <div class="form-group">
                            @Html.DisplayFor(model => model.TXT_CONTRASEÑA)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TXT_ROL)
                        </div>

                        <div class="form-group">
                            @Html.DisplayFor(model => model.TXT_ROL)
                        </div>


                        <div class="form-group">
                            <div>
                                <form action="@Url.Action("Edit", "Usuarios", new { id = Model.ID_USUARIO, })">
                                    <input class="btn btn-primary" type="submit" value="Editar Usuario">
                                    |
                                    @Html.ActionLink("Regresar al Contenido Principal", "Index", null, new { @class = "btn btn-default" })
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</aside>

@Scripts.Render("~/bundles/endpage")